// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Entrada {
  id          Int    @id @default(autoincrement())
  value       Int
  description String
  userId      Int
}

model Despesa {
  id          Int    @id @default(autoincrement())
  valueDesp   Int
  description String
  userId      Int
}

model Client {
  id          Int    @id @default(autoincrement())
  valueClient Int
  description String
  userId      Int
}

model Fornecedores {
  id          Int    @id @default(autoincrement())
  valueFornec Int
  description String
  userId      Int
}
